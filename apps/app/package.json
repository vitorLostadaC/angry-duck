{
	"name": "electron-app",
	"productName": "Pato Puto",
	"version": "1.0.0",
	"description": "An Electron application with React and TypeScript",
	"main": "./out/main/index.js",
	"author": "example.com",
	"homepage": "https://electron-vite.org",
	"scripts": {
		"check-types:node": "tsc --noEmit -p tsconfig.node.json --composite false",
		"check-types:web": "tsc --noEmit -p tsconfig.web.json --composite false",
		"check-types": "npm run check-types:node && npm run check-types:web",
		"start": "electron-vite preview",
		"dev": "electron-vite dev",
		"build": "npm run check-types && electron-vite build",
		"build:unpack": "npm run build && electron-builder --dir",
		"build:win": "npm run build && electron-builder --win",
		"build:mac": "electron-vite build && electron-builder --mac",
		"build:linux": "electron-vite build && electron-builder --linux",
		"lint": "biome check src",
		"lint:fix": "biome check --fix --unsafe ./src"
	},
	"dependencies": {
		"@ai-sdk/openai": "^1.3.22",
		"@electron-toolkit/preload": "^3.0.1",
		"@electron-toolkit/utils": "^4.0.0",
		"@tsparticles/engine": "^3.8.1",
		"@tsparticles/react": "^3.0.0",
		"@tsparticles/slim": "^3.8.1",
		"ai": "^4.3.16",
		"clsx": "^2.1.1",
		"electron-updater": "^6.3.9",
		"framer-motion": "^12.15.0",
		"lucide-react": "^0.511.0",
		"tailwind-merge": "^3.3.0",
		"zod": "^3.25.20"
	},
	"devDependencies": {
		"@electron-toolkit/tsconfig": "^1.0.1",
		"@repo/typescript-config": "workspace:*",
		"@types/node": "^22.14.1",
		"@types/react": "^19.1.1",
		"@types/react-dom": "^19.1.2",
		"@vitejs/plugin-react": "^4.3.4",
		"autoprefixer": "^10.4.21",
		"electron": "^35.1.5",
		"electron-builder": "^25.1.8",
		"electron-vite": "^3.1.0",
		"postcss": "^8.5.3",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.8.3",
		"vite": "^6.2.6",
		"vite-plugin-svgr": "^4.3.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": ["electron", "esbuild"]
	}
}
