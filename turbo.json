{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": ["VITE_*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "release": {
      "dependsOn": ["^release"]
    },
    "build:linux": {
      "dependsOn": ["^build:linux"],
      "env": ["VITE_*"]
    },
    "build:mac": {
      "dependsOn": ["^build:mac"],
      "env": ["VITE_*"]
    },
    "build:win": {
      "dependsOn": ["^build:win"],
      "env": ["VITE_*"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
