{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["ES2023"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "allowJs": true,
    "declaration": false,
    "sourceMap": true,
    "composite": true,
    "types": ["electron-vite/node"]
  },
  "include": ["electron.vite.config.*", "src/main/**/*", "src/preload/**/*"],
  "exclude": ["node_modules", "dist", "build", "out"]
}
